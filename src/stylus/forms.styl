// input
@import "mixins"

.input
  padding: 10px
  width: 130px
  height: 34px
  border: 1px solid $black-15
  color: $colorGrayDark
  input-placeholder-color($colorGrayLight)
  &:focus
    border: 1px solid $colorGray
    outline: none
  &.-success
    border: 1px solid $colorGray
  &.-error
    border: 1px solid $colorSecondaryRed
    color: $colorSecondaryRed

// checkbox
.checkbox
  padding-top 15px
  color $colorGray

// combo bar
.combo-bar-container
  padding 10px 15px
  min-height 34px
  border 1px solid $black-15
  background $white
  font-size 12px
  color $colorGrayLight

.combo-bar-input
  display block
  margin-top 23px
  width 100%

.combo-bar-check-list-clear
  color $colorPrimary
  float right
