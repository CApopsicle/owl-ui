// input
@import "mixins"


.input
.textarea
  padding: 10px
  width: 130px
  border: 1px solid $colorGrayLighter
  color: $colorGrayDark
  input-placeholder-color($colorGrayLight)
  &:focus
    outline: none
    border-color: $colorPrimaryLight
    box-shadow: 0 0 0 2px rgba($colorPrimary, .2), 0 1px 2px rgba(0, 0, 0, .05) inset
.textarea
  width: 100%
.input
  height: 34px
  &.-success
    border: 1px solid $colorSecondaryGreen
    color: $colorSecondaryGreen
  &.-error
    border: 1px solid $colorSecondaryRed
    color: $colorSecondaryRed


// checkbox
.checkbox
  padding-top 15px
  color $colorGray

// combo bar
.combo-bar-container
  padding 10px 15px
  min-height 34px
  border 1px solid $black-15
  background $white
  font-size 12px
  color $colorGrayLight

.combo-bar-input
  display block
  margin-top 23px
  width 100%

.combo-bar-check-list-clear
  color $colorPrimary
  float right
