.full-width
  width: 100%
.full-height
  height: 100%
.full-size
  @extend .full-width
  @extend .full-height

.alc
  text-align: center
  display: block

.hide
  display: none !important
.show
  display: block !important

// SVG color fill

for color, i in $palette {
  .fill-{color} {
    fill: $palette[color]
  }
}
