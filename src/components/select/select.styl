$pd = 10px
$height = 34px

.select
  background-color: $palette.white
  border 1px solid rgba(0,0,0,.2)
  cursor pointer
  &:focus
    outline: none
    .optionBox:after
      box-shadow: inset 0 0 2px $palette.purpleLight
.disabled
  opacity .5
  cursor no-drop
  background-color: $palette.grayLighter

.selectOpen
  position: relative
  .arrow
    transform rotate(-225deg)
    margin-top 0
.optionBox
  position: absolute
  background-color: $palette.white
  border 1px solid rgba(0,0,0,.2)
  border-top none
  left: -1px
  right: -1px
  z-index: 999
  &:after
    content ''
    position: absolute
    top: $height * -1
    right: 0
    bottom: 0
    left: 0
    pointer-events none

.options
  position: relative
  color: #a0a0a0
  padding 6px $pd
  &:hover
    color: #000

.title
  height: $height
  position: relative
  display: flex
  padding-left $pd
  align-items center
  justify-content space-between
.titleRight
  padding-right: $pd
.arrow
  $size = 12px
  $bcolor = 2px solid #000
  transition all .2s
  width: $size
  height: $size
  border-bottom: $bcolor
  border-left: $bcolor
  transform rotate(-45deg)
  margin-top: -7px
