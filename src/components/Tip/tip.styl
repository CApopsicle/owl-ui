$tipRighAndButtomAndLeft
  &:after, &:before
    left: 100%
    top: 50%
    transform: translate(0, -50%)
  &:before
    border-color: transparent
    border-right-color: $tipBg
  &:after
    transform: translate(10px, -50%)
    bottom: auto

.tip
  position: relative
  display: inline-block
  &:after, &:before
    position: absolute
    bottom: 100%
    left: 50%
    transition: all 0.18s ease-out 0.18s
    pointer-events: none
    opacity: 1
  &:after
    content: attr(data-text)
    background: $tipBg
    border-radius: $tipRadius
    padding: $sizing.xs $sizing.sm
    white-space: nowrap
    color: #eee
    transform: translate(-50%, -10px)
  &:before
    transform: translate(-50%)
    content: ''
    width: 0
    height: 0
    border: $sizing.xs + 1 solid transparent
    border-top-color: $tipBg
    position: absolute
  &:hover
    &:after, &:before
      opacity: 1
  &[data-pos="right"]
    @extend $tipRighAndButtomAndLeft
  &[data-pos="bottom"]
    @extend $tipRighAndButtomAndLeft
  &[data-pos="left"]
    @extend $tipRighAndButtomAndLeft
