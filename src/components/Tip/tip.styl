.tip
  $bg = rgba(0, 0, 0, .7)
  position: relative
  display: inline-block
  &:after, &:before
    position: absolute
    bottom: 100%
    left: 50%
    transition: all 0.18s ease-out 0.18s
    opacity
    pointer-events none
    opacity: 1
  &:after
    content: attr(data-text)
    background: $bg
    border-radius 3px
    padding 4px 8px
    white-space: nowrap
    color: #eee
    transform: translate(-50%, -10px)
  &:before
    transform: translate(-50%)
    content: ''
    width: 0
    height: 0
    border 5px solid transparent
    border-top-color $bg
    position: absolute
  &:hover
    &:after, &:before
      opacity 1

  &[data-pos="right"]
    &:after, &:before
      left 100%
      top 50%
      transform: translate(0, -50%)
    &:before
      border-color transparent
      border-right-color $bg
    &:after
      transform: translate(10px, -50%)
      bottom auto

  &[data-pos="bottom"]
    &:after, &:before
      left 100%
      top 50%
      transform: translate(0, -50%)
    &:before
      border-color transparent
      border-right-color $bg
    &:after
      transform: translate(10px, -50%)
      bottom auto

  &[data-pos="left"]
    &:after, &:before
      left 100%
      top 50%
      transform: translate(0, -50%)
    &:before
      border-color transparent
      border-right-color $bg
    &:after
      transform: translate(10px, -50%)
      bottom auto
