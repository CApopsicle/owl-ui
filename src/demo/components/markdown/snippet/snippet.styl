.code
  position: relative
  border-radius: 3px
  margin-bottom: 20px
  pre
    font-family: 'Source Code Pro'
    font-size 10px
    border-left 2px solid #e9e9e9
    padding-left: 7px
    max-height 300px
    min-height: 30px
    overflow-y scroll
.copyBtn
  position: absolute
  padding: 2px 7px
  top: 0px
  right: 18px
  cursor pointer
  background: #fff
  z-index: 888
