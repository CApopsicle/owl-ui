body
  background-color: #ECECEC
  margin: 0
  font: 16px/1.2 'Roboto', 'sans-serif'
  font-weight 300
  color #555
a
  text-decoration none
  color #555
  &:hover
    color: #59497B

header
  height: 280px
  padding: 50px
  background-image: linear-gradient(to right, rgb(89, 10, 170), rgb(140, 205, 255))
  color #fff
  font-size 30px
  position: relative
  h1
    margin: 0
    padding: 0
    font-size: 47px
    margin-right: 20px
    position: relative
    flex-direction column

nav
  border-right 1px solid #E9E9E9
  width: 180px
  @extend $fs13

footer
  text-align: center
  padding-bottom: 20px

:global(.monospace)
  font-family: 'Source Code Pro', 'monospace'
  font-weight 200

:global(.fbox-content)
  display: flex
  //align-items: stretch
  //justify-content: space-around
  background: #fff
  margin 20px 40px
  border-radius 5px
  padding 20px
  section
    padding 0 20px
    padding-right: 0
    flex 1
.hrow
  align-items center
  justify-content center
  display: flex
  flex-direction row
  margin-bottom: 20px
.ghostBtn
  font-size: 14px
  display: inline-block
  padding 8px 12px
  border 1px solid #fff
  color: #fff
  border-radius: 3px

.badges
  img
    margin 0 4px
