$fs12
  font-size: (12/16)rem
$fs13
  font-size: (13/16)rem
$fs14
  font-size: (14/16)rem
$fs15
  font-size: (15/16)rem


*, *:after, *:before
  box-sizing: border-box

a
  text-decoration: none
  color: $palette.primaryDark
  &:hover
    text-decoration: underline
:global(.doc-content)
  h1
    font-size: 2em
    border-bottom: 1px solid $palette.grayLightest
  //h2, h3, h4, h5, h6
  //  &:before
  //    content: '\2B50\FE0F'
  //    margin-right: 4px
  //    font-size: .8em
  //    vertical-align: middle
body
  background-color: #ECECEC
  margin: 0
  font: 16px/1.2 'Roboto', 'sans-serif'
  font-weight 300
  color #555

header
  height: 280px
  padding: 50px
  background-image: linear-gradient(to right, rgb(89, 10, 170), #6B5499)
  color #fff
  font-size 30px
  position: relative
  h1
    margin: 0
    padding: 0
    font-size: 47px
    margin-right: 20px
    position: relative
    flex-direction column

nav
  border-right 1px solid #E9E9E9
  width: 180px
  @extend $fs13

footer
  text-align: center
  padding-bottom: 20px

:global(.monospace)
  font-family: 'Source Code Pro', 'monospace'
  font-weight 200

:global(.fbox-content)
  display: flex
  //align-items: stretch
  //justify-content: space-around
  background: #fff
  margin 20px 40px
  border-radius 5px
  padding 20px
  section
    padding 0 20px
    padding-right: 0
    flex 1
.hrow
  align-items center
  justify-content center
  display: flex
  flex-direction row
  margin-bottom: 20px
.ghostBtn
  font-size 1rem
  display: inline-block
  padding 12px 16px
  border-radius: 0.3rem
  color: rgba(255, 255, 255, 0.7)
  background-color: rgba(255, 255, 255, 0.08)
  border: 1px solid rgba(255, 255, 255, 0.2)
  &:hover
    color: rgba(255, 255, 255, 0.8)
    background-color: rgba(255, 255, 255, 0.2)
    border-color: rgba(255, 255, 255, 0.3)

.badges
  img
    margin 0 4px
