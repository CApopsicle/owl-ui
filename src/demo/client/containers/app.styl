$fs12
  font-size: (12/16)rem
$fs13
  font-size: (13/16)rem
$fs14
  font-size: (14/16)rem
$fs15
  font-size: (15/16)rem


*, *:after, *:before
  box-sizing: border-box
:global(.doc-content)
  h1
    font-size: 2em
    border-bottom: 1px solid $palette.grayLightest
  //h2, h3, h4, h5, h6
  //  &:before
  //    content: '\2B50\FE0F'
  //    margin-right: 4px
  //    font-size: .8em
