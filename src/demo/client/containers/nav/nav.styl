nav[data-page="/icon"] a[href="/icon"],
nav[data-page="/checkbox"] a[href="/checkbox"],
nav[data-page="/select"] a[href="/select"],
nav[data-page="/tab"] a[href="/tab"],
nav[data-page="/table"] a[href="/table"],
nav[data-page="/tip"] a[href="/tip"]
  border-right 3px solid #5B4B7D
  cursor default
  &:hover .link
    border-bottom-color transparent
nav
  font-size: 12px
.block
  margin-bottom: 16px

.blockList
  height: 24px
  a
    display: flex
    padding-left: 10px
    align-items center
    height: 100%
    .link
      border-bottom 1px dashed transparent
    &:hover .link
      border-bottom-color #605082
